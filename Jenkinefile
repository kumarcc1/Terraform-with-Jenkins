pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
            git branch: 'main', url: 'https://github.com/kumarcc1/Terraform-with-Jenkins.git'            

          }
        }
        
        stage ("Initialize Terraform") {
            steps {
                sh ('terraform init') 
            }
        }
        
        stage ("validate the syntax ") {
            steps {
                sh ('terraform validate')
           }
        }
        stage ('Terraform DryRun') {
            steps{
                sh ('terraform plan')
            }
        }
        stage ('Infra Ready') {
            steps{
                sh ('terraform apply')
            }
        }
    }
}
